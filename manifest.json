{
    "name" : "Content Settings Reborn",
    "version" : "0.1",
    "description" : "Restores the content settings permission control functionality as it existed in Chrome 23 till Chrome 41.",
    "permissions": [ "storage", "contentSettings", "activeTab" ],
    "browser_action": {
        "default_icon": "contentSettings.png",
        "default_popup": "popup.html"
    },
    "minimum_chrome_version": "42",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "manifest_version": 2
}
